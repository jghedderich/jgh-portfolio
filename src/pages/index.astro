import About from '../components/about/About.astro';
import SkillsSection from '../components/skills/SkillsSection.astro';
import ReposSection from '../components/repositories/ReposSection.astro';
---

<Layout title="Juan Hedderich">
  <main class="">
    <section
      class="relative flex flex-col justify-between items-center text-center h-[100vh] py-5"
    >
      <div></div>
      <div>
        <h1 class="text-7xl">Juan Hedderich</h1>
        <h3 class="text-2xl">Ingeniero de Software</h3>
      </div>
      <div class="flex flex-col gap-2 justify-center">
        <p class="text-lg">my work</p>
        <img src="/ui/arrow.svg" class="h-6 animate-bounce" />
