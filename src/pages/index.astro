---
import Layout from '../layouts/Layout.astro';
import About from '../components/about/About.astro';
import SkillsSection from '../components/skills/SkillsSection.astro';
import ReposSection from '../components/repositories/ReposSection.astro';
import Penguin from '../components/penguin/Penguin.astro';
import { Image } from 'astro:assets';
import arrowIcon from '../assets/ui/arrow.svg';
---

<Layout title="Juan Hedderich">
  <main class="">
    <section
      class="relative flex flex-col justify-between items-center text-center h-[100vh] py-5"
    >
      <div></div>
      <div>
        <h1 class="text-7xl">Juan Hedderich</h1>
        <h3 class="text-2xl">Ingeniero de Software</h3>
      </div>
      <div class="flex flex-col gap-2 justify-center items-center">
        <p class="text-lg">my work</p>
        <Image src={arrowIcon} alt="arrow icon" class="h-6 animate-bounce" />
      </div>
    </section>

    <ReposSection />
    <SkillsSection />
    <div class="relative">
      <About />
      <div class="absolute bottom-20 -right-20 -rotate-45">
        <Penguin />
      </div>
    </div>
    <div class="absolute bottom-20 -left-20 rotate-45">
      <Penguin />
    </div>
  </main>
</Layout>

<style>
  body {
    font-family: monospace;
  }
</style>
