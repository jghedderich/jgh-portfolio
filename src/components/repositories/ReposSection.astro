---
import RepoCard from './RepoCard.astro';

const response = await fetch('https://api.github.com/users/cdfornari/repos');
const data = await response.json();
---

<section
  class="py-6 flex flex-col justify-between max-w-screen-lg mx-auto px-5"
>
  <div>
    <h2 class="text-2xl font-serif">Mis repositorios</h2>
    <div class="flex flex-wrap gap-5 my-3">
      {
        data == undefined ? (
          <p>no data</p>
        ) : (
          data.map((repo: any) => <RepoCard {repo} />)
        )
      }
    </div>
  </div>
</section>
