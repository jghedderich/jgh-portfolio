---
import { Image } from 'astro:assets';
import type { Project } from '../../types/project';
import Badge from '../common/Badge.astro';
import ArrowIcon from '../icons/arrow.astro';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="rounded-md shadow-md overflow-hidden">
  <Image
    src={project.thumbnail}
    alt={project.name}
    loading="eager"
    class="h-64 object-cover"
  />
  <section class="flex justify-between items-end gap-3 bg-white p-4 min-w-full">
    <div>
      <h3 class="text-2xl font-semibold">{project.name}</h3>
      <p class="text-gray-500 mb-3">{project.description}</p>
      <div class="flex gap-3">
        {
          project.technologies.frontend.map((tech) => (
            <Badge label={tech.name} />
          ))
        }
      </div>
    </div>
    <a
      href={'/projects/' + project.slug}
      class="flex gap-2 items-center bg-blue-500 text-white font-semibold hover:bg-blue-400 transition ease-out rounded-md h-fit px-3 py-1"
      >MÃ¡s info <ArrowIcon class="size-5 -rotate-90" /></a
    >
  </section>
</div>

<style>
  .mask {
    mask-image: linear-gradient(white, transparent);
  }
</style>
