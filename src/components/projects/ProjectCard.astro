---
import { Image } from 'astro:assets';
import type { Project } from '../../types/project';
import Badge from '../common/Badge.astro';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col rounded-md shadow-md overflow-hidden bg-white">
  <Image
    src={project.thumbnail}
    alt={project.name}
    loading="eager"
    class="h-64 object-cover"
  />
  <section class="p-4 min-w-full">
    <h3 class="text-2xl font-semibold">{project.name}</h3>
    <p class="text-gray-500 mb-3">{project.description}</p>

    <div class="flex gap-3 mb-4">
      {project.technologies.frontend.map((tech) => <Badge label={tech.name} />)}
    </div>
    <a
      href={'/projects/' + project.slug}
      class="flex justify-center gap-1 items-center bg-blue-500 text-white font-semibold hover:bg-blue-400 transition ease-out rounded-md h-fit px-3 py-2"
      >MÃ¡s info</a
    >
  </section>
</div>

<style>
  .mask {
    mask-image: linear-gradient(white, transparent);
  }
</style>
