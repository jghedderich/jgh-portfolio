---
import { Image } from 'astro:assets';
import type { Project } from '../../types/project';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a
  href={'/projects/' + project.slug}
  class="rounded-md shadow relative group transition ease-out overflow-hidden"
>
  <Image
    src={project.thumbnail}
    alt={project.name}
    class="w-full object-cover group-hover:scale-105 group-hover:rotate-1 transtion ease-out duration-500 z-0"
  />
  <div class="absolute bottom-0 bg-white p-3 min-w-full z-10">
    <h3 class="text-xl">{project.name}</h3>
    <p>{project.description}</p>
  </div>
</a>

<style>
  .mask {
    mask-image: linear-gradient(white, transparent);
  }
</style>
