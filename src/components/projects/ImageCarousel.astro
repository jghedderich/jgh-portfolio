---
import { Image } from 'astro:assets';

const { images } = Astro.props;
---

<div class="relative pb-8">
  <div class="swiper my-6 w-[90vw] max-w-screen-lg">
    <div class="swiper-wrapper">
      {
        images.map((img: ImageMetadata) => (
          <div class="swiper-slide w-fit my-auto">
            <Image
              src={img}
              loading="eager"
              alt="ui section of the proyect"
              class="rounded-md w-fit mx-auto border h-full max-h-[800px] object-contain object-center"
            />
          </div>
        ))
      }
    </div>
  </div>
  <div class="swiper-pagination bottom-0"></div>
</div>

<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline>
  new Swiper('.swiper', {
    spaceBetween: 30,
    centeredSlides: true,
    slidesPerView: 1.1,
    pagination: true,
    pagination: {
      el: '.swiper-pagination',
    },
  });
</script>
