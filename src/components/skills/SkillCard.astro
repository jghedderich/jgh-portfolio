---
import { Image } from 'astro:assets';
import type { Skill } from '../../types/skill';

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
---

<a
  href={skill.url}
  target="_blank"
  class="flex flex-col items-center p-5 transition ease-out bg-slate-50 hover:bg-slate-100 dark:bg-slate-700 dark:hover:bg-slate-600 rounded-lg"
>
  <Image
    src={skill.image}
    loading="eager"
    alt=`${skill.name} icon`
    class="w-full h-20 md:h-24"
  />

  <p class="text-center text-lg mt-3">
    {skill.name}
  </p>
</a>
